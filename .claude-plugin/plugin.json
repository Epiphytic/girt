{
  "name": "girt",
  "version": "0.1.0",
  "description": "Generative Isolated Runtime for Tools -- dynamically builds, tests, and publishes sandboxed WebAssembly tools on demand via a multi-agent pipeline.",
  "author": {
    "name": "epiphytic",
    "email": "liam.helmer@gmail.com"
  },
  "repository": "https://github.com/Epiphytic/girt",
  "license": "MIT",
  "keywords": [
    "mcp",
    "wasm",
    "tool-generation",
    "sandbox",
    "security",
    "pipeline",
    "multi-agent",
    "wassette"
  ],
  "commands": "./commands/",
  "agents": "./agents/",
  "skills": "./skills/",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "request_capability",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/capability-intercept.sh"
          }
        ]
      },
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/tool-call-gate.sh",
            "async": true
          }
        ]
      }
    ]
  }
}
